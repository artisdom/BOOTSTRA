IF %MODE%==CLEAN GOTO :EOF

CALL ISREG16 %1
IF %RESULT%==1 GOTO :REG16
IF x%1==xBYTE GOTO :XMRM8
IF x%1==xWORD GOTO :XMRM16
ECHO Expected register, byte or word ModR/M (IP=%IP%)

:REG16
CALL RPN! _%IP%_1+
SET IP=%RESULT%
IF %MODE%==COUNT GOTO :EOF
CALL CREG16 %1
CALL RPN! _72_%REG%+
CALL EMITBYTE %RESULT%
GOTO :EOF

:XMRM16
SHIFT
CALL CMRM16 %1
CALL RPN! _%IP%_2+_%DISPBYTES%+
SET IP=%RESULT%
IF %MODE%==COUNT GOTO :EOF
IF NOT %DISPBYTES%==1 GOTO :NOCHECK1
CALL IS8SIGN %2
IF %RESULT%==1 GOTO :NOCHECK1
ECHO Byte displacement truncated (IP=%IP%)
:NOCHECK1
CALL EMITBYTE 255
CALL RPN! _%MRM%_8+
CALL EMITBYTE %RESULT%
IF %DISPBYTES%==1 CALL EMITBYTE %2
IF %DISPBYTES%==2 CALL EMITWORD %2
GOTO :EOF

:XMRM8
SHIFT
CALL CMRM8 %1
CALL RPN! _%IP%_2+_%DISPBYTES%+
SET IP=%RESULT%
IF %MODE%==COUNT GOTO :EOF
IF NOT %DISPBYTES%==1 GOTO :NOCHECK2
CALL IS8SIGN %2
IF %RESULT%==1 GOTO :NOCHECK2
ECHO Byte displacement truncated (IP=%IP%)
:NOCHECK2
CALL EMITBYTE 254
CALL RPN! _%MRM%_8+
CALL EMITBYTE %RESULT%
IF %DISPBYTES%==1 CALL EMITBYTE %2
IF %DISPBYTES%==2 CALL EMITWORD %2
GOTO :EOF

:EOF
